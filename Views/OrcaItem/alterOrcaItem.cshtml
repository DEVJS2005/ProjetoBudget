@Model ProjetoBudget.Models.OrcaItem
@{
    ViewBag.Title = "Alterar Item Listado";
}
<div class="text-center">
    <form name="alterOrcaItem" method="post" action="/OrcaItem/alterOrcaItem?idItemOrc=@Model.idItemorcamentario&idOrcamento=@Model.idorcamento&vlrUnit=@Model.itensOrcamentarios.valorUnitario">
        <label> Selecione a Prioridade do item @Model.itensOrcamentarios.descricaoItem: </label>

        <div class="form-check">
            <input class="form-check-input" type="radio" name="prioridade" id="flexRadioDefault1" value="A" onclick="alterarVisibilidade('divObs','Alta')" style="color:white;"> Alta
        </div>

        <div class="form-check">
            <input class="form-check-input" type="radio" name="prioridade" id="flexRadioDefault2" value="M" onclick="alterarVisibilidade('divObs','Média')"style="color:white;"> Média
        </div>

        <div class="form-check">
            <input class="form-check-input" type="radio" name="prioridade" id="flexRadioDefault2" value="B" onclick="alterarVisibilidade('divObs','Baixa')"style="color:white;"> Baixa
        </div>

        <div class="form-check">
            <input class="form-check-input" type="number" name="quantItem" id="flexRadioDefault2" value="@Model.quantItem"> 
        </div>

        <div class="form-check" id="divObs" style="display:none">
            <br />
            <label style="color:white;"> Observação: </label>
            <br />
            <textarea class="form-check-input" type="text" name="observacao" id="flexRadioDefault2" maxlength="1000" style="width:1000px; height:180px;resize:none;" placeholder="Escreva sua observação aqui:"> </textarea>

        </div>

        @if (Model.itensOrcamentarios.tipoGasto == "C" || Model.itensOrcamentarios.tipoGasto == "D")
        {
            <label style="color:white;">Valor aplicado ao: @Model.itensOrcamentarios.descricaoItem </label>
            <input type="text" name="total" value="@Model.total" />
        }
        <br />
        <button type="submit" class="btn btn-success"> Salvar alterações </button>
    </form>
</div>
@section Scripts{
    <script>
        function alterarVisibilidade(id, campoClick) {
            var display = document.getElementById(id).style.display;
            if (campoClick == "Alta") {
                document.getElementById(id).style.display = 'block';
            } else if (campoClick == "media") {
                document.getElementById(id).style.display = 'none';
            } else { document.getElementById(id).style.display = 'none'; }
        }
    </script>
}