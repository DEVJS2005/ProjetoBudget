@Model ProjetoBudget.Models.itensOrcamentarios

@{
    ViewBag.Title = "Item Orçamentario";
}

<form name="CadastroItemOrcamentario"  action="/ItensOrcamentarios/Cadastro" method="post">
    <div class="form-group">
        <label for="exampleInputEmail1"> Nome do Item Orçamentario: </label>
        <input type="text" name="ItemOrcamentario" class="form-check-input" id="exampleCheck1" />
    </div>

   
        <label for="exampleInputEmail1"> Tipo de Gasto: </label>
        <select name="tipoGasto">
            @foreach (var item in Model)
            {
                <option value="@item.idItemOrcamentario">
                    @item.tipoGasto
                </option>
            }

        </select>
    

   
        <label for="exampleInputEmail1"> Natureza Gasto: </label>
        <select name="naturezaGasto">
            @foreach (var item in Model)
            {
                <option value="@item.idItemOrcamentario">
                    @item.naturezaGasto
                </option>
            }

        </select>
    
    <hr />
   
        <label> Descrição do Item:  </label>
        <input type="text" name="DescricaoItem" class="form-check-input" id="exampleCheck1" /><br />

        <br />
        <label> Valor Unitario: </label>
        <input type="text" name="valorUnitario" class="form-check-input" id="exampleCheck1" />


    <button type="submit" class="btn btn-primary"> Registrar </button>
</form>