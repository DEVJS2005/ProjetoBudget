@Model ProjetoBudget.Models.TipoItem
@{
    ViewBag.Title = "Alterar Prioridade";
}
<div class="text-center">
    <form name="AlterPrioridade" method="post" action="/TipoItem/Editar?idTPI=@Model.idTipoItem">
       
        <div class="form-check" >
            <br />
            <label style="color:white;font-size:24px;"> Nome do Tipo de Item: </label>
            <br />
            <input class="form-check-input" type="text" name="NomeTipoItem" value="@Model.nomeTipoItem" />

        </div>
        <br />
        <button type="submit" class="btn btn-success"> Salvar </button>

    </form>
</div>
